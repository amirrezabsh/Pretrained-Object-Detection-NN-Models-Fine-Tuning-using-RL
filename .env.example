# Copy this file to `.env` and edit the values to match your setup.

# Directory where Pascal VOC 2007 (or torchvision downloads) is stored.
VOC_ROOT=./data/voc

# Optional: point to a custom YOLO-format dataset to override VOC.
IMAGE_DIR=./data/images
LABEL_DIR=./data/labels

# RL training/evaluation configuration.
RL_DATA_LIMIT=500
RL_TOTAL_TIMESTEPS=20000
RL_LEARNING_RATE=3e-4
RL_EVAL_EPISODES=5

# RL environment knobs (model-agnostic post-processing tuning).
RL_MAX_DELTA=0.15              # max per-step threshold delta
RL_MAX_STEPS=20                # refinement steps per episode
RL_NMS_IOU=0.7                 # starting NMS IoU
RL_MAX_NMS_DELTA=0.1           # max per-step NMS delta
RL_MAX_DET=200                 # starting max detections
RL_MAX_DET_DELTA=50            # max per-step max-det change
RL_BOX_COUNT_PENALTY=0.05      # penalty weight for box count mismatch
